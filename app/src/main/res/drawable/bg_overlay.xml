<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#6A1B9A"
                android:centerColor="#8E24AA"
                android:endColor="#311B92"
                android:angle="135" />
